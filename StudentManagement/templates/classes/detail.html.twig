
{% extends "base.html.twig" %}

{% block title %}{{class.name}}{% endblock %}

{% block nav %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">
                            
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('student_index')}}">Student</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('classes_index')}}">Class</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Log out</a>
                </li>
            </ul>
        </nav>   
{% endblock %}

{% block body %}
<table class="table table-bordered table-hover mt-5  mb-5">
    <h1 class="text text-success text-center">{{class.name}}</h1>
    <tbody>
        <tr>
            <th class="text text-success">Subject</th>
            <td>{{class.subject}}</td>
        </tr>
        <tr>
            <th class="text text-success">Total Lesson</th>
            <td>{{class.totalLesson}}</td>
        </tr>
        <tr>
            <th class="text text-success">Lecturer</th>
            <td>{{class.lecturer}}</td>
        </tr>  
        <tr>
            <th class="text text-success">Students:</th>
            <td>
            {% for s in class.students %}
            {{s.name}},
            {% endfor %}
            </td>
        </tr>
    </tbody>
</table>
{% endblock %}