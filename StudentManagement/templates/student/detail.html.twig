{% extends "base.html.twig" %}

{% block title %}{{student.name}}{% endblock %}

{% block nav %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">
                            
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('student_index')}}">Student</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('classes_index')}}">Class</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Log out</a>
                </li>
            </ul>
        </nav>   
{% endblock %}

{% block body %}
    <div class="container col-md-6 mt-5 mb-4">
        <div class="row">
            <div class="col">
                <img src="{{student.image}}" width="300px"  alt="student image">
            </div>
            <div class="col text-center">
                <h1 class="text text-success">{{student.name}}</h1>
                <h5>DOB: {{student.dob| date('d-m-Y')}}</h5>            
                <h5>Address: {{student.address}}</h5>
                <h5>Phone: {{student.phone}}</h5>
                <h5>School Year: {{student.schoolYear}}</h5>  
                <h5>Classes:</h5>
                {% for c in student.classes %}
                    <h6>{{c.name}}</h6>
                {% endfor %}
            </div>

        </div>

    </div>
{% endblock %}